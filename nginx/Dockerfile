FROM nginx:alpine

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf
COPY conf.d/opareta.conf /etc/nginx/conf.d/opareta.conf
COPY conf.d/upstream.conf /etc/nginx/conf.d/upstream.conf

# Remove default nginx configuration to avoid conflicts
RUN rm -f /etc/nginx/conf.d/default.conf

# Create SSL directory
RUN mkdir -p /etc/nginx/ssl

# Copy SSL certificates (will be generated by script)
COPY ssl/opareta.crt /etc/nginx/ssl/opareta.crt
COPY ssl/opareta.key /etc/nginx/ssl/opareta.key

# Create log directories
RUN mkdir -p /var/log/nginx

# Expose ports
EXPOSE 80 443

# Start nginx
CMD ["nginx", "-g", "daemon off;"]

